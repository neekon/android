<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabStyle</item>
    </style>

    <style name="MyActionBarTabStyle" parent="style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/nav_bar_bottom</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="background">@drawable/nav_bar_bottom</item>
        <item name="android:actionBarTabBarStyle">@style/customTabBar</item>
        <item name="actionBarTabBarStyle">@style/customTabBar</item>
    </style>

    <style name="customTabBar" parent="style/Widget.AppCompat.Light.ActionBar">
        <item name="android:showDividers">none</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

</resources>
